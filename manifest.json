{
  "manifest_version": 2,

  "name": "lastfm-delete-track-button",
  "version": "1.0.2",
  "description": "Adds delete buttons on scrobble list",
  "content_scripts": [
    {
      "matches": [
        "*://*.last.fm/user/*/library",
        "*://*.last.fm/user/*/library?page=*",
        "*://*.last.fm/user/*/library/music/*/*/*"],
      "js": ["delete-code.js"],
      "css": ["delete-styles.css"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
